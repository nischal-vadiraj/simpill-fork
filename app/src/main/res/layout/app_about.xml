        <TextView
            android:id="@+id/gitlab_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"
            android:autoLink="all"
            android:fontFamily="@font/inter_reg"
            android:letterSpacing="0.01"
            android:text="@string/simpill_source_link"
            android:textColor="@color/alice_blue"
            android:textColorLink="@color/light_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gitlab_title"
            app:layout_constraintTop_toBottomOf="@+id/gitlab_title" />


        <TextView
            android:id="@+id/dev_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:text="@string/dev_email"
            android:textColor="@color/alice_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/simpill_paragraph"
            app:layout_constraintTop_toBottomOf="@+id/gitlab_link" />

