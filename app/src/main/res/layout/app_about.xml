            android:id="@+id/dev_email_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"
            android:autoLink="all"
            android:fontFamily="@font/inter_reg"
            android:letterSpacing="0.01"
            android:text="helpline@contact.com"
            android:textColor="@color/alice_blue"
            android:textColorLink="@color/light_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dev_email_title"
            app:layout_constraintTop_toBottomOf="@+id/dev_email_title" />

        <TextView
            android:id="@+id/simpill_paragraph_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/inter_reg"
            android:letterSpacing="0.01"
            android:lineSpacingMultiplier="1.15"
            android:text="@string/simpillAboutParagraph_2"
            android:textColor="@color/alice_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dev_email_link"
            tools:ignore="UnusedAttribute" />


