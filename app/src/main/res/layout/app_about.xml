<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/simpill_paragraph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:fontFamily="@font/inter_reg"
            android:letterSpacing="0.01"
            android:lineSpacingMultiplier="1.15"
            android:text="@string/simpillAboutParagraph_1"
            android:textColor="@color/alice_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/chevron_left"
            android:scaleX="1.6"
            android:scaleY="1.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gitlab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:text="@string/simpill_code"
            android:textColor="@color/alice_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/simpill_paragraph"
            app:layout_constraintTop_toBottomOf="@+id/simpill_paragraph" />

